<div id="popupPage" data-page="{{this.page}}" data-id="{{this._id}}">
    <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-cutlery fa-lg fa-fw" aria-hidden="true"></i></span>
        <input type="text" class="form-control" placeholder="Navn" value="{{this.navn}}" name="navn" id="input-navn">
    </div>
    <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-object-group fa-lg fa-fw" aria-hidden="true"></i></span>
        <input type="text" class="form-control" placeholder="Enhed" value="{{this.enhed}}" name="enhed" id="input-enhed">
    </div>
    <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-phone fa-money fa-lg fa-fw" aria-hidden="true"></i></span>
        <input type="number" class="form-control" placeholder="Pris" value="{{this.pris}}" name="pris" id="input-pris">
    </div>
    <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-comment-o fa-lg fa-fw" aria-hidden="true"></i></span>
        <input type="text" class="form-control" placeholder="Beskrivelse" value="{{this.beskrivelse}}" name="beskrivelse" id="input-beskrivelse">
    </div>
    <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-tags fa-lg fa-fw" aria-hidden="true"></i></span>
        <select name="varekategori" id="input-varekategori">
            {{#each varekategorier}}
                <option value="{{this._id}}" {{this.selected}}>{{this.navn}}</option>
            {{/each}}
        </select>
    </div>
</div>

