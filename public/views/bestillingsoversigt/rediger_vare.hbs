<div class="panel ny-bestilling-panel">
    <div class="panel-body">
        <h4 id="rediger-vare-overskift">{{this.navn}}</h4>
        <h4 class="detaljer-overskrift-vare" id="antal-enhed-overskrift">Antal {{this.enhed}}</h4>
        <div class="row">
            <div class="col-sm-offset-3 col-sm-6">
                <div class="input-group" id="antal-vare">
            <span class="input-group-btn">
                <button type="button" class="btn btn-danger" id="btn-number-minus" data-type="minus">
                    <span class="fa fa-minus"></span>
                </button>
            </span>
                    <input id="input-antal-vare" type="text" class="form-control" value="{{this.antal}}" min="0.1"
                           max="999">
                    <span class="input-group-btn">
                <button type="button" class="btn btn-success" id="btn-number-plus" data-type="plus">
                    <span class="fa fa-plus"></span>
                </button>
            </span>
                </div>
            </div>
        </div>
        <h4 class="detaljer-overskrift-vare" id="pris-enhed-overskrift">Pris</h4>
        <div class="row">
            <div class="col-sm-offset-3 col-sm-6">
                <div class="input-group pris-vare">
                    <span class="input-group-addon"><i class="fa fa-money" aria-hidden="true"></i></span>
                    <input id="pris_vare" class="form-control" type="number" value="{{this.pris}}">
                </div>
            </div>
        </div>
        <h4 class="detaljer-overskrift-vare">Kommentar</h4>
        <div class="row">
            <div class="col-sm-offset-2 col-sm-8">
                <textarea class="form-control" placeholder="TilfÃ¸j kommentar"
                          id="rediger-kommentar-vare">{{this.kommentar}}</textarea>
            </div>
        </div>
        <div id="bestillingsvare">
            <h4>
                Bestillingsvare <input type="checkbox" title="bestillingsvare-checkbox"
                                       id="rediger-bestillingsvare-checkbox" {{bestillingsVareTrueFalse
                        this.bestillingsvare}}>
            </h4>
        </div>
        <div class="row">
            <div class="col-sm-offset-1 col-sm-10">
                <button class="btn btn-lg btn-default" id="tilbage_rediger_vare">Tilbage</button>
                <button class="btn btn-lg btn-success" id="gem_rediger_vare" data-id="{{this._id}}">Gem</button>
            </div>
        </div>
    </div>
</div>