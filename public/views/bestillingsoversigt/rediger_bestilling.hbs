<div class="row">
    <div class="col-md-12">
        <div id="kunde_info" data-id="{{this._id}}">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user fa-lg fa-fw" aria-hidden="true"></i></span>
